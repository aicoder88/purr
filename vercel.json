{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "pnpm prisma generate && pnpm build",
  "devCommand": "pnpm dev",
  "installCommand": "pnpm install",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "regions": ["iad1"],
  "functions": {
    "app/api/create-checkout-session/route.ts": {
      "maxDuration": 30
    },
    "app/api/webhooks/stripe/route.ts": {
      "maxDuration": 30
    },
    "app/api/admin/blog/**/*.ts": {
      "maxDuration": 30
    },
    "app/api/cron/**/*.ts": {
      "maxDuration": 60
    }
  },
  "headers": [
    {
      "source": "/videos/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/.env",
      "destination": "https://http.cat/403",
      "permanent": true
    },
    {
      "source": "/.env.local",
      "destination": "https://http.cat/403",
      "permanent": true
    },
    {
      "source": "/.env.production",
      "destination": "https://http.cat/403",
      "permanent": true
    },
    {
      "source": "/index.php",
      "destination": "https://http.cat/403",
      "permanent": true
    },
    {
      "source": "/wp-login.php",
      "destination": "https://http.cat/403",
      "permanent": true
    },
    {
      "source": "/wp-admin/:path*",
      "destination": "https://http.cat/403",
      "permanent": true
    },
    {
      "source": "/xmlrpc.php",
      "destination": "https://http.cat/403",
      "permanent": true
    },
    {
      "source": "/wordpress/:path*",
      "destination": "https://http.cat/403",
      "permanent": true
    },
    {
      "source": "/wp/:path*",
      "destination": "https://http.cat/403",
      "permanent": true
    },
    {
      "source": "/admin.php",
      "destination": "https://http.cat/403",
      "permanent": true
    },
    {
      "source": "/config.php",
      "destination": "https://http.cat/403",
      "permanent": true
    },
    {
      "source": "/setup.php",
      "destination": "https://http.cat/403",
      "permanent": true
    },
    {
      "source": "/phpmyadmin/:path*",
      "destination": "https://http.cat/403",
      "permanent": true
    },
    {
      "source": "/.git/:path*",
      "destination": "https://http.cat/403",
      "permanent": true
    },
    {
      "source": "/.htaccess",
      "destination": "https://http.cat/403",
      "permanent": true
    },
    {
      "source": "/config/:path*",
      "destination": "https://http.cat/403",
      "permanent": true
    }
  ],
  "crons": [
    {
      "path": "/api/cron/abandoned-cart",
      "schedule": "0 14 * * *"
    },
    {
      "path": "/api/cron/daily-tasks",
      "schedule": "0 6 * * *"
    }
  ]
}
